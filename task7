// Step 1: Define the Car class
class Car(
    val brand: String,  // Property: brand (immutable)
    val model: String,  // Property: model (immutable)
    val year: Int       // Property: year (immutable)
) {
    // Function to display car details
    fun displayDetails() {
        println("Car Details: $brand $model ($year)")
    }
}

fun main() {
    // Step 2: Create two Car objects
    val car1 = Car("Toyota", "Corolla", 2020)  // Object 1
    val car2 = Car("Tesla", "Model S", 2022)   // Object 2

    // Step 3: Call displayDetails() for each car
    car1.displayDetails()  // Output: Toyota Corolla (2020)
    car2.displayDetails()  // Output: Tesla Model S (2022)
}
